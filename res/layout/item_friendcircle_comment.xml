<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/iv_comment_image"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:layout_marginTop="16dp"
                 android:id="@+id/commentclick"
                 >

                <TextView
                    android:id="@+id/tv_comment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="xxxxx"
                    android:textColor="#47494C"
                    android:textSize="10sp" />
                
                <TextView
                    android:id="@+id/tv_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="03-30 19:00"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:textColor="#b3b2b2"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/align_standard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:singleLine="false"
                    android:text="非常好很好不错还行可以非常好很好不错还行可以非常好很好不错还行可"
                    android:textColor="#494b4e"
                    android:textSize="10sp" />
            </LinearLayout>

           
        </LinearLayout>
    
              <ImageView 
            android:id="@+id/comment_devider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:src="@drawable/devider_comment_line"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            />
    
</LinearLayout>
