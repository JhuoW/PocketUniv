<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/departmentPhone"
        android:layout_alignParentLeft="true"
        android:layout_margin="15dip"
        android:layout_marginLeft="18dp"
        android:src="@drawable/ic_plugin_contacts" />

    <TextView
        android:id="@+id/departmentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/img_phone"
        android:text="体育部"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/departmentPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/departmentName"
        android:layout_below="@id/departmentName"
        android:layout_marginTop="5dip"
        android:text="18796256266" />

</RelativeLayout>