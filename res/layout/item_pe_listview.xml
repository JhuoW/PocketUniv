<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_listview_item_split" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="80dp" >

        <TextView
            android:id="@+id/fragment_news_listview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/fragment_news_listview_photo"
            android:maxLines="2"
            android:textColor="#313233"
            android:textSize="16sp"
            android:text="title"
             />

        <ImageView
            android:id="@+id/fragment_news_listview_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/action_settings"
            android:src="@drawable/image_error"
            />

        <TextView
            android:id="@+id/fragment_news_listview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:text="time"
            android:textColor="#7A7C80"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>