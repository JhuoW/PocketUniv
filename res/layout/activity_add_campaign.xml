<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <include layout="@layout/base_header_layout" />

    <!-- 照片 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="#ffffff"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_campaign"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_add_avatar_selector" />
        </LinearLayout>
    </LinearLayout>

    <!-- 分类 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_devide"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="#ffffff"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="5dip"
                android:text="添加分类："
                android:textColor="#737373"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/ll_lowwarn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minHeight="40dp" >

                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext1"
                    android:gravity="left|center"
                    android:hint="请选择分类"
                    android:minHeight="40dp"
                    android:paddingLeft="5dp"
                    android:textColor="#ff000000"
                    android:textSize="16sp" >
                </TextView>

                <ImageButton
                    android:id="@+id/bt_dropdown"
                    android:layout_width="36px"
                    android:layout_height="20px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/down_arrow" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 标题 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="#ffffff"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="5dip"
                android:text="标题："
                android:textColor="#737373"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minHeight="40dp" >

                <EditText
                    android:id="@+id/title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext1"
                    android:gravity="left|center"
                    android:hint="1-20个汉字"
                    android:minHeight="40dp"
                    android:paddingLeft="5dp"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 地点 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="#ffffff"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="5dip"
                android:text="地点："
                android:textColor="#737373"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minHeight="40dp" >

                <EditText
                    android:id="@+id/place"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext1"
                    android:gravity="left|center"
                    android:hint="1-30个汉字"
                    android:minHeight="40dp"
                    android:paddingLeft="5dp"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 开始时间 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="#ffffff"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="5dip"
                android:text="开始时间："
                android:textColor="#737373"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minHeight="40dp" >

                <TextView
                    android:id="@+id/btime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext1"
                    android:gravity="left|center"
                    android:hint="请选择时间"
                    android:minHeight="40dp"
                    android:paddingLeft="5dp"
                    android:textColor="#ff000000"
                    android:textSize="16sp" >
                </TextView>

                <ImageButton
                    android:id="@+id/bt_dropdownBtime"
                    android:layout_width="36px"
                    android:layout_height="20px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/down_arrow" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 结束时间 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="#ffffff"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="5dip"
                android:text="结束时间："
                android:textColor="#737373"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minHeight="40dp" >

                <TextView
                    android:id="@+id/etime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext1"
                    android:gravity="left|center"
                    android:hint="请选择时间"
                    android:minHeight="40dp"
                    android:paddingLeft="5dp"
                    android:textColor="#ff000000"
                    android:textSize="16sp" >
                </TextView>

                <ImageButton
                    android:id="@+id/bt_dropdownEtime"
                    android:layout_width="36px"
                    android:layout_height="20px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/down_arrow" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_bg"
        android:gravity="top"
        android:hint="在此处填写活动详情"
        android:minLines="8"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:textColor="#555555"
        android:textColorHint="#999999"
        android:textSize="15sp" />

</LinearLayout>